generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Folder {
  id    String @id @default(uuid())
  name  String
  files File[]
}

model File {
  id       String @id @default(uuid())
  name     String
  folderId String
  folder   Folder @relation(fields: [folderId], references: [id])
}
