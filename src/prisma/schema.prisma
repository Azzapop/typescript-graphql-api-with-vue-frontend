generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider       = "zod-prisma-types"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Painter {
  id                String             @id @default(cuid())
  name              String
  country           String
  painterTechniques PainterTechnique[]
  paintings         Painting[]
  createdAt         DateTime           @default(now()) @db.Timestamptz(6)
  updatedAt         DateTime           @updatedAt @db.Timestamptz(6)
}

model Painting {
  id          String    @id @default(cuid())
  authorId    String
  author      Painter   @relation(fields: [authorId], references: [id])
  title       String
  techniqueId String
  technique   Technique @relation(fields: [techniqueId], references: [id])
  date        DateTime  @db.Date
  createdAt   DateTime  @default(now()) @db.Timestamptz(6)
  updatedAt   DateTime  @updatedAt @db.Timestamptz(6)
}

model Technique {
  id                String             @id @default(cuid())
  name              String
  painterTechniques PainterTechnique[]
  paintings         Painting[]
  createdAt         DateTime           @default(now()) @db.Timestamptz(6)
  updatedAt         DateTime           @updatedAt @db.Timestamptz(6)
}

model PainterTechnique {
  id          String    @id @default(cuid())
  painterId   String
  painter     Painter   @relation(fields: [painterId], references: [id])
  techniqueId String
  technique   Technique @relation(fields: [techniqueId], references: [id])
  createdAt   DateTime  @default(now()) @db.Timestamptz(6)
  updatedAt   DateTime  @updatedAt @db.Timestamptz(6)
}
