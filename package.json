{
  "name": "api",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "start": "NODE_ENV=production node dist/server/index.js",
    "dev": "nodemon -x 'vite-node src'",
    "test": "vitest",
    "---------------- Helper Scripts ----------------": "",
    "build:client": "vite build --ssrManifest .vite/ssr-manifest.json --outDir dist/client",
    "build:server": "vite build --ssr src/index.ts --outDir dist/server",
    "graphql:types": "graphql-codegen",
    "tsc": "tsc --project tsconfig.json --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format:check": "prettier src --check",
    "format:fix": "prettier src --write",
    "db:format": "prisma format --schema=./src/modules/prisma/schema.prisma",
    "db:migrate": "prisma migrate dev --schema=./src/modules/prisma/schema.prisma"
  },
  "private": true,
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@apollo/client": "^3.11.8",
    "@apollo/server": "^4.11.0",
    "@graphql-tools/schema": "^10.0.6",
    "@prisma/client": "^5.16.1",
    "@vue/apollo-composable": "^4.2.1",
    "chalk": "^5.3.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "graphql": "^16.9.0",
    "pinia": "^2.2.2",
    "serve-static": "^1.15.0",
    "vue": "^3.4.35",
    "vue-router": "^4.4.0",
    "zod": "^3.23.8",
    "zod-prisma-types": "^3.1.8"
  },
  "devDependencies": {
    "@anatine/zod-mock": "^3.13.4",
    "@eslint/js": "^9.5.0",
    "@faker-js/faker": "^8.4.1",
    "@graphql-codegen/add": "^5.0.3",
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/near-operation-file-preset": "^3.0.0",
    "@graphql-codegen/typescript": "^4.0.9",
    "@graphql-codegen/typescript-resolvers": "^4.2.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.2",
    "@vitejs/plugin-vue": "^5.1.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vue": "^9.27.0",
    "globals": "^15.6.0",
    "graphql-codegen": "^0.4.0",
    "graphql-codegen-typescript-validation-schema": "^0.16.0",
    "nodemon": "^3.1.3",
    "prettier": "3.3.2",
    "prisma": "^5.16.1",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.18.0",
    "vite": "^5.4.3",
    "vite-node": "^2.0.5",
    "vite-plugin-graphql-loader": "^4.0.4",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.1.3"
  }
}
