{
  "name": "api",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "start": "NODE_ENV=production node dist/server/index.js",
    "dev": "nodemon -x 'vite-node src'",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest watch",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:integration:watch": "vitest watch --config vitest.integration.config.ts",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:coverage:watch": "vitest watch --coverage",
    "---------------- Helper Scripts ----------------": "",
    "build:client": "vite build --ssrManifest .vite/ssr-manifest.json --outDir dist/client",
    "build:server": "vite build --ssr src/index.ts --outDir dist/server",
    "graphql:types": "graphql-codegen",
    "tsc": "tsc --project tsconfig.json --noEmit && vue-tsc --project tsconfig.json --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format:check": "prettier src --check",
    "format:fix": "prettier src --write",
    "db:format": "prisma format --schema=./src/libs/domain-model/prisma/schema.prisma",
    "db:migrate": "prisma migrate dev --schema=./src/libs/domain-model/prisma/schema.prisma",
    "db:create-user": "vite-node scripts/create-user.ts",
    "auth:types": "vite-node scripts/generate-auth-types/generate-types.ts",
    "i18n:merge": "vite-node scripts/merge-i18n.ts",
    "auth:swagger:validate": "swagger-cli validate ./src/modules/auth/swagger/index.yaml",
    "auth:swagger:bundle": "swagger-cli bundle -o ./src/modules/auth/swagger.yaml -t yaml -r ./src/modules/auth/swagger/index.yaml"
  },
  "private": true,
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@apollo/client": "^3.11.8",
    "@apollo/server": "^4.11.0",
    "@graphql-tools/schema": "^10.0.6",
    "@primevue/themes": "^4.1.1",
    "@prisma/client": "^5.16.1",
    "@vue/apollo-composable": "^4.2.1",
    "axios": "^1.13.5",
    "bcrypt": "^6.0.0",
    "chalk": "^5.3.0",
    "compression": "^1.7.4",
    "convict": "^6.2.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "graphql": "^16.9.0",
    "jose": "^6.1.3",
    "modern-normalize": "^3.0.1",
    "passport": "^0.7.0",
    "passport-custom": "^1.1.1",
    "passport-local": "^1.0.0",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "pinia": "^2.2.2",
    "pino": "^10.3.1",
    "pino-http": "^11.0.0",
    "primeicons": "^7.0.0",
    "primevue": "^4.1.1",
    "serve-static": "^1.15.0",
